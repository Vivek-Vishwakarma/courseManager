<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
    <title>Course Management Stystem</title>
</head>
<body>
    <div class="header">
        <h2>Your All Courses</h2>
    </div>
    <div class="container">
        <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Duration</th>
                <th scope="col">Cost</th>
              </tr>
            </thead>
            <tbody>
                <%  course.forEach(courses => { %>
                    <tr class="head">
                        <th class="id" scope="row"><%= courses.id %></th>
                        <td class="nameTable"><%= courses.courseName %></td>
                        <td><%= courses.description %></td>
                        <td><%= courses.duration %></td>
                        <td><%= courses.cost %></td>
                        <td><a href="/delete/<%=courses.id %>" class="delete">Delete</a></td>
                      </tr>

                <%}) %>
            </tbody>
          </table>
        <a href="/"><button type="button" class="btn btn-secondary">Back / Create New</button></a>
        <a href="/deleteAll"><button type="button" class="btn btn-danger">Delete All</button></a>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>